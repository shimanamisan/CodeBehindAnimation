<Window x:Class="MVVMBindingAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMBindingAnimation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <!--Gridに名前をつけて自作するイベント何の名前に含める-->
        <Grid Name="MainGrid" Loaded="MainGrid_Loaded" MouseEnter="MainGrid_MouseEnter">
            <Label FontSize="30">3秒かけて徐々に表示される</Label>
        </Grid>

        <Label FontSize="30">こっちはアニメーションが実行されない</Label>
    </StackPanel>

</Window>
